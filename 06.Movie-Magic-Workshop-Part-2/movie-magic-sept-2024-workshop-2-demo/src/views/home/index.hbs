{{#if isSearch}}
<section id="search">
    <h1>Search</h1>
    <form method="GET" class="form">
        <input type="text" class="search" name="search" value="{{filter.search}}" placeholder="Title...">
        <input type="text" name="genre" class="genre" value="{{filter.genre}}" placeholder="Genre...">
        <input type="number" name="year" class="year" value="{{filter.year}}" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>
{{/if}}

<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">

        {{#each movies}}
            {{>movie}}
        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no movies yet...</p>
        </div>
        {{/each}}
    </div>
</section>
