<section class="details-hero">
    <div class="container">
        <h2>Laptop Details</h2>
    </div>
</section>

<section class="details-content">
    <div class="container">
        <div class="product-details">
            <div class="product-image">
                <img src="{{image}}" alt="Laptop">
            </div>
            <div class="product-info">
                <h3>Brand: {{brand}}</h3>
                <p><strong>Model:</strong> {{model}}</p>
                <p><strong>Hard Disk:</strong> {{hardDisk}}</p>
                <p><strong>Screen Size:</strong> {{screenSize}} inches</p>
                <p><strong>RAM:</strong> {{ram}}GB</p>
                <p><strong>Operating System:</strong> {{operatingSystem}}</p>
                <p><strong>CPU:</strong> {{cpu}}</p>
                <p><strong>GPU:</strong> {{gpu}}</p>
                <p><strong>Price:</strong> ${{price}}</p>
                <p><strong>Color:</strong> {{color}}</p>
                <p><strong>Weight:</strong> {{weight}}kg</p>
            </div>
        </div>
        <div class="product-actions">
            {{#if user}}
            {{#if isOwner}}
            <button class="btn edit"><a href="/devices/{{_id}}/edit">Edit</a></button>
            <button class="btn delete"><a href="/devices/{{_id}}/delete">Delete</a></button>
            {{else}}
            {{#if isPrefered}}
            <p class="prefer-message">You've already preferred this device</p>
            {{else}}
            <button class="btn prefer"><a href="/devices/{{_id}}/prefer">Prefer</a></button>
            {{/if}}
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>