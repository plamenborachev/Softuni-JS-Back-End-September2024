<section class="profile-hero">
    <div class="container">
        <h2>User Profile</h2>
        <p>Welcome back, <span id="username">John Doe</span> <strong id="email">( john.doe@example.com )</strong></p>
    </div>
</section>

<section class="created-laptops">
    <div class="container">
        <h3>Created Laptops</h3>
        <div class="laptop-list">
            <!-- Add more laptop items as needed -->
            {{#if created}}
            {{#each created}}
            {{> profile-card}}
            {{/each}}
            {{else}}
            <p class="no-post">You haven't created a post yet</p>
            {{/if}}
        </div>
    </div>
</section>

<section class="preferred-laptops">
    <div class="container">
        <h3>Preferred Laptops</h3>
        <div class="laptop-list">
            {{#if prefered}}
            {{#each prefered}}
            {{> profile-card}}
            {{/each}}
            {{else}}
            <p class="no-post">You haven't preferred any devices yet</p>
            {{/if}}
        </div>
    </div>
</section>